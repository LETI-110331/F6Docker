{
    "name": "F6Docker Dev Container",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker"
            ]
        },
        "jetbrains": {
            "plugins": [
                "Docker"
            ]
        }
    },
    "forwardPorts": [5432, 27017],
    "postCreateCommand": "echo 'Dev Container pronto!'",
    "remoteUser": "vscode"
}
